# EditorConfig for Mechanica Imperii
# Version: 1.0
# Ensures consistent coding styles across different editors and IDEs
# See: https://editorconfig.org
# Supported by: VS Code, Visual Studio, CLion, Sublime, Vim, Emacs, and more

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,cc,cxx,c++}]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

# C++ header files
[*.{h,hpp,hxx,h++}]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

# JSON files (data, configuration)
[*.json]
indent_style = space
indent_size = 2

# YAML files (CI/CD, config)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf

# Batch scripts (Windows)
[*.{bat,cmd}]
indent_style = space
indent_size = 4
end_of_line = crlf

# Python scripts (tools, data processing)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab

# Doxygen configuration
[Doxyfile]
indent_style = space
indent_size = 4

# Git configuration
[.gitattributes]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2
