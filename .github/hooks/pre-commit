#!/bin/bash
# Pre-commit hook for automatic code formatting
# Installation: cp .github/hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

# Check if clang-format is installed
if ! command -v clang-format-18 &> /dev/null; then
  echo "Warning: clang-format-18 not found. Skipping formatting."
  echo "Install with: sudo apt-get install clang-format-18"
  exit 0
fi

# Get the list of staged C++ files (null-delimited for safety with spaces)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM -z | grep -zE '\.(cpp|h|hpp|cc)$')

if [ -z "$STAGED_FILES" ]; then
  # No C++ files staged, exit successfully
  exit 0
fi

echo "Running clang-format on staged C++ files..."

# Format each staged file (handles filenames with spaces)
# Use null delimiter (-d '') to safely handle spaces in filenames
echo "$STAGED_FILES" | while IFS= read -r -d '' file; do
  if [ -f "$file" ]; then
    echo "  Formatting: $file"
    if ! clang-format-18 -i "$file"; then
      echo "ERROR: clang-format failed on $file"
      exit 1
    fi
    # Re-stage the formatted file
    git add "$file"
  fi
done

# Check if loop failed
if [ $? -ne 0 ]; then
  echo "✗ Code formatting failed"
  exit 1
fi

echo "✓ Code formatting complete"
exit 0
